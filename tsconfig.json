{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
      "consumer.ts",
      "metrics.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "mock-data",
      "*.md",
      "*.js",
      "observability"
    ]
  }